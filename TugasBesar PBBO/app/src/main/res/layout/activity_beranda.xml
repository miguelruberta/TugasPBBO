<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313131"
    android:orientation="vertical"
    tools:context=".BerandaActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#414141"
        android:gravity="center"
        android:text="Beranda"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-21dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BROLON"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-9dp"
                tools:layout_editor_absoluteY="107dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="________________________"
                android:textAlignment="center"
                android:textColor="#707070"
                android:textSize="30sp"
                android:layout_gravity="center"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="800dp" />

            <ImageView
                android:layout_width="256dp"
                android:layout_height="198dp"
                app:srcCompat="@drawable/contoh6"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="442dp"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="256dp"
                android:layout_height="198dp"
                app:srcCompat="@drawable/contoh5"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="662dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:text="@string/brolon_adalah_perusahaan_sablon_yang_lagi_laris_manis_brolon_menyediakan_jasa_sablon_yang_terbaik_dan_pasnya_dak_mengecewakan_pelanggan_ini_beberapa_view_desain_kami"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="227dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:text="Best Desain"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="398dp" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="70dp"
        android:background="#414141"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/home_white" />

        <ImageButton
            android:id="@+id/orderButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/order_list_black" />

        <ImageButton
            android:id="@+id/historyButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/history_black" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/profile_black" />
    </LinearLayout>
</LinearLayout>

